<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">


    <persistence-unit name="SContable">
        <class>BackEnd.Asiento</class>
        <class>BackEnd.Cuenta</class>
        <class>BackEnd.Ejercicio</class>
        <class>BackEnd.Empresa</class>
        <class>BackEnd.Imputable</class>
        <class>BackEnd.MesAjustado</class>
        <class>BackEnd.NoImputable</class>
        <class>BackEnd.Perfil</class>
        <class>BackEnd.SistemaContable</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/postgres" />
            <property name="javax.persistence.jdbc.user" value="postgres" />
            <property name="javax.persistence.jdbc.password" value="postgres" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>
    </persistence-unit>

</persistence>